<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jihai.bitfree.dao.MessageNoticeDAO">
    <resultMap id="configResultMap" type="com.jihai.bitfree.entity.MessageNoticeDO">
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="message_id" property="messageId" />
        <result column="status" property="status" />
        <result column="deleted" property="deleted" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <sql id="BASE_COLUMN">id, message_id, user_id, status, create_time, update_time, deleted</sql>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO check_in(`message_id`, `user_id`)
        VALUE(#{messageId}, #{userId})
    </insert>
    <insert id="batchInsert">
        INSERT INTO message_notice(`message_id`, `user_id`)
        VALUES
        <foreach collection="messageNoticeDOList" separator=","  item="messageNotice">
            (#{messageNotice.messageId},
            #{messageNotice.userId})
        </foreach>

    </insert>

</mapper>